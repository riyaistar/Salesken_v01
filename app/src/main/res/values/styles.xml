<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/theme</item>
    </style>
    <style name="MyHintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/greyishBrown</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="YourStyleNameFor.NavigationDrawer" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">#00000000</item>
        <item name="android:textSize">@dimen/p1</item>
        <!--
                <item name="listPreferredItemHeightSmall">@dimen/big_title</item>
        -->

    </style>
</resources>
